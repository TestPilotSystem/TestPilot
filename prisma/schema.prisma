datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  STUDENT
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                 Int       @id @default(autoincrement())
  email              String    @unique
  password           String
  role               Role      @default(STUDENT)
  mustChangePassword Boolean   @default(false)

  // Datos personales
  dni                String?   @unique
  firstName          String
  lastName           String
  dateOfBirth        DateTime?

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Un usuario puede tener varias solicitudes (ej: una rechazada y luego otra nueva)
  requests           Request[]
}

model Request {
  id         Int           @id @default(autoincrement())
  status     RequestStatus @default(PENDING)
  adminNotes String?       
  
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  // Relaci√≥n con el usuario
  userId     Int
  user       User          @relation(fields: [userId], references: [id])

  @@index([userId])
}